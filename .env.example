# Environment Variables Template for IFC Quality Intelligence Platform
# Copy this file to .env and customize the values

# Logging Configuration
IFCQI_LOGGING__LEVEL=INFO
IFCQI_LOGGING__FILE_PATH=logs/ifcqi.log

# MLflow Configuration
IFCQI_MLFLOW__TRACKING_URI=./mlruns
IFCQI_MLFLOW__EXPERIMENT_NAME=ifc-quality

# ML Configuration
IFCQI_ML__ENABLED=true
IFCQI_ML__CONTAMINATION=0.05

# IFC Processing
IFCQI_IFC__EXTRACT_GEOMETRY=true
IFCQI_IFC__MAX_ELEMENTS=

# Output Configuration
IFCQI_OUTPUT__INCLUDE_GEOMETRY=false

# API Configuration (if running API server)
API_HOST=0.0.0.0
API_PORT=8000
API_RELOAD=false

# Azure Configuration (optional, for future use)
# AZURE_STORAGE_CONNECTION_STRING=
# AZURE_ML_WORKSPACE_NAME=
# AZURE_SUBSCRIPTION_ID=
